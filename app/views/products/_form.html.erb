<%= form_for @product, html: {multipart: true} do |f| %>

<% if @product.errors.any? %>
    <div class = "alert alert-danger">
      <h2>
        <%=t('common.errors')%>
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>	

 
	<div class="form-group">
	   <strong><%= f.label :'title:' %></strong><br>
	   <%= f.text_field :title, class:"form-control", size: 70 %>	   
	</div>	
			
	<div class="form-group">
	   <strong><%= f.label :'first image:' %></strong><br>
	   <%=f.file_field :image %>
	 </div>
	
	<div class="form-group">
	    <strong><%= f.label :'second image:' %></strong><br>
	    <%=f.file_field :image1 %>	
	</div>
	
	<div class="form-group">
	   <strong><%= f.label :'text:' %></strong><br>
	   <%=f.text_area  :text, class:"form-control", cols: 75, rows: 5 %>
	</div>
	
	<div class="form-group">
	  <%=f.submit :'save', class:"btn btn-primary"%>
	  <%=link_to  'back', :back, class: "btn btn-secondary"%>
	  
	</div>
	
<% end %>